\begin_layout Subsection
固有时间
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{bmatrix}x_{1} & x_{2} & x_{3} & x_{4}\end{bmatrix}\coloneqq\begin{bmatrix}x & y & z & \sqrt{-1}ct\end{bmatrix}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mathrm{d}\tau=\frac{\mathrm{d}s}{c}=\sqrt{1-\frac{(\mathrm{d}x)^{2}+(\mathrm{d}y)^{2}-(\mathrm{d}z)^{2}}{(c\,\mathrm{d}t)^{2}}}\mathrm{d}t=\sqrt{1-(v/c)^{2}}\mathrm{d}t
\]

\end_inset


\end_layout

\begin_layout Subsection
四维向量
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
p_{i}\coloneqq m_{0}\frac{\mathrm{d}x_{i}}{\mathrm{d}\tau}=\frac{m_{0}}{\sqrt{1-(v/c)^{2}}}\frac{\mathrm{d}x_{i}}{\mathrm{d}t}=\begin{cases}
mv_{i} & i=1,2,3\\
mc\sqrt{-1} & i=4
\end{cases}
\]

\end_inset

其中
\begin_inset Formula 
\[
m\coloneqq\frac{m_{0}}{\sqrt{1-(v/c)^{2}}}
\]

\end_inset


\begin_inset Formula 
\[
\frac{\mathrm{d}p_{i}}{\mathrm{d}\tau}=f_{i}
\]

\end_inset


\end_layout

