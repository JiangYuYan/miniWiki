\begin_inset Formula 
\begin{equation}
\begin{gathered}\partial_{t}\ket{U}+\partial_{x}\ket{F}_{x}+\partial_{y}\ket{F}_{y}=\ket{0}\qquad(x,y,t)\in(-\infty,\infty)^{2}\times(0,\infty)\\
\ket{U}=\begin{bmatrix}\rho\\
\rho u\\
\rho v\\
\rho E
\end{bmatrix}\qquad\ket{F}_{x}=\begin{bmatrix}\rho u\\
\rho uu+p\\
\rho vu\\
\rho Hu
\end{bmatrix}\qquad\ket{F}_{y}=\begin{bmatrix}\rho v\\
\rho uv\\
\rho vv+p\\
\rho Hv
\end{bmatrix}\\
E=\frac{p/\rho}{\gamma-1}+\frac{u^{2}+v^{2}}{2}\qquad H=E+\frac{p}{\rho}
\end{gathered}
\label{eq:pde_euler_2d}
\end{equation}

\end_inset

