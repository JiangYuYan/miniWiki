\end_layout

\begin_layout Standard
原始变量 
\begin_inset Formula $\rho,u,p$
\end_inset

 及通量 
\begin_inset Formula $\ket{F}$
\end_inset

 的分量可以表示为守恒变量 
\begin_inset Formula $\ket{U}$
\end_inset

 的函数：
\begin_inset Formula 
\[
\begin{gathered}\rho=U_{1}\qquad u=\frac{U_{2}}{U_{1}}\qquad p=(\gamma-1)U_{3}-\frac{\gamma-1}{2}\frac{U_{2}^{2}}{U_{1}}\\
F_{1}=U_{2}\qquad F_{2}=(\gamma-1)U_{3}-\frac{\gamma-3}{2}\frac{U_{2}^{2}}{U_{1}}\qquad F_{3}=\left(\gamma U_{3}-\frac{\gamma-1}{2}\frac{U_{2}^{2}}{U_{1}}\right)\frac{U_{2}}{U_{1}}
\end{gathered}
\]

\end_inset

于是，可以将守恒型一维 Euler 方程
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{aligned}\Matrix{A(U)} & =\begin{bmatrix}\pdv*{F_{1}}{U_{1}} & \pdv*{F_{1}}{U_{2}} & \pdv*{F_{1}}{U_{3}}\\
\pdv*{F_{2}}{U_{1}} & \pdv*{F_{2}}{U_{2}} & \pdv*{F_{2}}{U_{3}}\\
\pdv*{F_{3}}{U_{1}} & \pdv*{F_{3}}{U_{2}} & \pdv*{F_{3}}{U_{3}}
\end{bmatrix}\\
 & =\begin{bmatrix}0 & 1 & 0\\
\frac{\gamma-3}{2}\frac{U_{2}^{2}}{U_{1}^{2}} & (3-\gamma)\frac{U_{2}^{2}}{U_{1}^{2}} & \gamma-1\\
\left((\gamma-1)\frac{U_{2}^{2}}{U_{1}^{2}}\frac{U_{2}}{U_{1}}-\gamma\frac{U_{3}}{U_{1}}\frac{U_{2}}{U_{1}}\right) & \left(\gamma\frac{U_{3}}{U_{1}}-\frac{\gamma-1}{2}\frac{3U_{2}^{2}}{U_{1}^{2}}\right) & \gamma\frac{U_{2}}{U_{1}}
\end{bmatrix}
\end{aligned}
\]

\end_inset

代入 
\begin_inset Formula $\frac{U_{2}}{U_{1}}=u$
\end_inset

 及 
\begin_inset Formula $\gamma\frac{U_{3}}{U_{1}}=\gamma E$
\end_inset

 可得
\begin_inset Formula 
\[
\Matrix{A(U)}=\begin{bmatrix}0 & 1 & 0\\
0.5(\gamma-3)u^{2} & (3-\gamma)u & \gamma-1\\
\left((\gamma-1)u^{3}-\gamma Eu\right) & \big(\gamma E-1.5(\gamma-1)u^{2}\big) & \gamma u
\end{bmatrix}
\]

\end_inset

代入 
\begin_inset Formula $\gamma E=\frac{a^{2}}{\gamma-1}+\gamma\frac{u^{2}}{2}$
\end_inset

 可得
\begin_inset Formula 
\[
\Matrix{A(U)}=\begin{bmatrix}0 & 1 & 0\\
0.5(\gamma-3)u^{2} & (3-\gamma)u & \gamma-1\\
\left((0.5\gamma-1)u^{3}-\frac{a^{2}}{\gamma-1}u\right) & \left((1.5-\gamma)u^{2}-\frac{a^{2}}{\gamma-1}\right) & \gamma u
