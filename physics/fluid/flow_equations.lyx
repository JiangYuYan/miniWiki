\end_layout

\begin_layout Axiom
\begin_inset ERT
status open

\begin_layout Plain Layout

[能量守恒]
\end_layout

\end_inset


\begin_inset Index idx
status collapsed

\begin_layout Plain Layout
conservation!~ of energy
\end_layout

\end_inset

物质体 
\begin_inset Formula $V_{\mathrm{MB}}$
\end_inset

 内所含总能量 
\begin_inset Formula $\int_{V_{\mathrm{MB}}}\left(e+\abs{\vec{u}}^{2}/2\right)\rho$
\end_inset

 的时间变化率，等于“热源 (heat source)”、“传热 (heat conduction)”、“做功 (work)”之和：
\begin_inset Formula 
\[
\begin{aligned}\dv{t}\int_{V_{\mathrm{MB}}}\left(e+\abs{\vec{u}}^{2}/2\right)\rho & =\int_{V_{\mathrm{MB}}}j-\oint_{\partial V_{\mathrm{MB}}}\vec{n}\vdot\vec{q}\end{aligned}
\]

\end_inset

其中
\end_layout

\begin_deeper
\begin_layout Itemize
标量 
\begin_inset Formula $j$
\end_inset

 为“热源密度 (density of heat source)”，表示“单位时间”内“单位体积”热源的“热生成量 (heat generation)”。
\end_layout

\begin_layout Itemize
向量 
\begin_inset Formula $\vec{q}$
\end_inset

 为“热通量密度 (density of heat flux)”，表示“单位时间”内穿过“单位面积”的“热流量 (heat flow)”。
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Standard
对于更一般的控制体 
\begin_inset Formula $V$
\end_inset

，时间全导数应当用物质导数代替：
\begin_inset Formula 
\begin{equation}
