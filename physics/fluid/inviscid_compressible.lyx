\begin_layout Itemize
由“质量守恒”可知 
\begin_inset Formula $\rho u$
\end_inset

 是不变量，可以当做常数处理，将其代入“动量守恒”可得
\begin_inset Formula 
\[
[p]_{1}^{2}=-[\rho u^{2}]_{1}^{2}=\rho u\cdot[-u]_{1}^{2}\implies\left[\frac{p}{\rho u}\right]_{1}^{2}=[-u]_{1}^{2}
\]

\end_inset

代入状态方程 
\begin_inset Formula $p=\rho RT$
\end_inset

 和当地音速 
\begin_inset Formula $a^{2}=\gamma RT$
\end_inset

 可得
\begin_inset Formula 
\[
[-u]_{1}^{2}=\left[\frac{p}{\rho u}\right]_{1}^{2}=\left[\frac{a^{2}}{\gamma u}\right]_{1}^{2}=\frac{1}{\gamma}\left[\frac{a^{2}}{u}\right]_{1}^{2}
\]

\end_inset


\end_layout

\begin_layout Itemize
由“能量守恒”可得
\begin_inset Formula 
\[
\frac{a^{2}}{\gamma^{-}}+\frac{u^{2}}{2}=\frac{a_{0}^{2}}{\gamma^{-}}=\frac{a_{*}^{2}}{\gamma^{-}}\frac{\gamma^{+}}{2}
\]

\end_inset

同乘 
\begin_inset Formula $\gamma^{-}/u$
\end_inset

 并移项即得
\begin_inset Formula 
\[
\frac{a^{2}}{u}=\frac{\gamma^{+}}{2}\frac{a_{*}^{2}}{u}-\frac{\gamma^{-}}{2}u
\]

\end_inset


\end_layout

\begin_layout Itemize
比较前两步的结果即得
\begin_inset Formula 
\[
[-u]_{1}^{2}=\frac{1}{\gamma}\left[\frac{a^{2}}{u}\right]_{1}^{2}=\left[\frac{\gamma^{+}}{2\gamma}\frac{a_{*}^{2}}{u}-\frac{\gamma^{-}}{2\gamma}u\right]_{1}^{2}
\]

\end_inset

合并同类项、约去公因子即得
\begin_inset Formula 
\[
[-u]_{1}^{2}=\left[\frac{a_{*}^{2}}{u}\right]_{1}^{2}=a_{*}^{2}\cdot\left[\frac{1}{u}\right]_{1}^{2}\implies a_{*}^{2}=\frac{u_{1}-u_{2}}{\nicefrac{1}{u_{2}}-\nicefrac{1}{u_{1}}}=u_{1}u_{2}
\]

\end_inset

