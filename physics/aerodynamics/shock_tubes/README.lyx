\begin_inset Formula $\ket{F}$
\end_inset

's components in terms of 
\begin_inset Formula $\ket{U}$
\end_inset

's components 
\begin_inset Formula $U_{1},U_{2},U_{3}$
\end_inset

:
\begin_inset Formula 
\[
\rho=U_{1}\qquad u=\frac{U_{2}}{U_{1}}\qquad p=\left(\gamma-1\right)\left(U_{3}-\frac{U_{2}^{2}}{2U_{1}}\right)
\]

\end_inset


\begin_inset Formula 
\[
\begin{aligned}F_{1} & =U_{2}\\
F_{2} & =(\gamma-1)U_{3}+\frac{3-\gamma}{2}\frac{U_{2}^{2}}{U_{1}}\\
F_{3} & =\frac{U_{2}}{U_{1}}\left(\gamma U_{3}-\frac{\gamma-1}{2}\frac{U_{2}^{2}}{U_{1}}\right)
\end{aligned}
\]

\end_inset

The Jacobian matrix is then
\begin_inset Formula 
\[
\begin{aligned}\Matrix{A} & =\begin{bmatrix}\pdv*{F_{1}}{U_{1}} & \pdv*{F_{1}}{U_{2}} & \pdv*{F_{1}}{U_{3}}\\
\pdv*{F_{2}}{U_{1}} & \pdv*{F_{2}}{U_{2}} & \pdv*{F_{2}}{U_{3}}\\
\pdv*{F_{3}}{U_{1}} & \pdv*{F_{3}}{U_{2}} & \pdv*{F_{3}}{U_{3}}
\end{bmatrix}\\
 & =\begin{bmatrix}0 & 1 & 0\\
\frac{\gamma-3}{2}\left(\frac{U_{2}}{U_{1}}\right)^{2} & -\left(\gamma-3\right)\frac{U_{2}}{U_{1}} & \gamma-1\\
\left(\left(\gamma-1\right)\left(\frac{U_{2}}{U_{1}}\right)^{2}-\gamma\frac{U_{3}}{U_{1}}\right)\frac{U_{2}}{U_{1}} & \left(\gamma\frac{U_{3}}{U_{1}}-\frac{\gamma-1}{2}3\left(\frac{U_{2}}{U_{1}}\right)^{2}\right) & \gamma\frac{U_{2}}{U_{1}}
\end{bmatrix}\\
 & =\begin{bmatrix}0 & 1 & 0\\
(\gamma-3)\frac{u^{2}}{2} & -(\gamma-3)u & \gamma-1\\
\left((\gamma-1)u^{2}-\gamma\frac{U_{3}}{U_{1}}\right)u & \left(\gamma\frac{U_{3}}{U_{1}}-3(\gamma-1)\frac{u^{2}}{2}\right) & \gamma u
\end{bmatrix}\impliedby\frac{U_{2}}{U_{1}}=u\\
 & =\begin{bmatrix}0 & 1 & 0\\
(\gamma-3)\frac{u^{2}}{2} & -(\gamma-3)u & \gamma-1\\
\left(\frac{\gamma-2}{2}u^{2}-\frac{a^{2}}{\gamma-1}\right)u & \left(\frac{3-2\gamma}{2}u^{2}+\frac{a^{2}}{\gamma-1}\right) & \gamma u
\end{bmatrix}\impliedby\gamma\frac{U_{3}}{U_{1}}=\frac{a^{2}}{\gamma-1}+\gamma\frac{u^{2}}{2}\\
 & =\begin{bmatrix}0 & 1 & 0\\
(\gamma-3)\frac{u^{2}}{2} & -(\gamma-3)u & \gamma-1\\
\left(\frac{\gamma-1}{2}u^{2}-H\right)u & \left(H-(\gamma-1)u^{2}\right) & \gamma u
\end{bmatrix}\impliedby H=\frac{a^{2}}{\gamma-1}+\frac{u^{2}}{2}
\end{aligned}
\]

\end_inset


\end_layout

