\begin_layout Definition
\begin_inset ERT
status open

\begin_layout Plain Layout

[瑕积分，Cauchy 主值]
\end_layout

\end_inset

设实变函数 
\begin_inset Formula $f(x)$
\end_inset

 在点 
\begin_inset Formula $x_{0}\in(a,b)\subset\mathbb{R}$
\end_inset

 处间断，并且在区间 
\begin_inset Formula $(a,x_{0})$
\end_inset

 和 
\begin_inset Formula $(x_{0},b)$
\end_inset

 上可积。
\end_layout

\begin_layout Definition
如果以下极限存在
\begin_inset Formula 
\[
\lim_{\delta_{1}\to0^{+}}\int_{a}^{x_{0}-\delta_{1}}f(x)\dd{x}+\lim_{\delta_{2}\to0^{+}}\int_{x_{0}+\delta_{2}}^{b}f(x)\dd{x}
\]

\end_inset

则称它为瑕积分 
\begin_inset Formula $\int_{a}^{b}f(x)\dd{x}$
\end_inset

 的值。
\end_layout

\begin_layout Definition
如果以下极限存在
\begin_inset Formula 
\[
\lim_{\delta\to+0}\left(\int_{a}^{x_{0}-\delta}+\int_{x_{0}+\delta}^{b}\right)f(x)\dd{x}
\]

\end_inset

则称它为瑕积分 
\begin_inset Formula $\int_{a}^{b}f(x)\dd{x}$
\end_inset

 的 Cauchy 主值，记作 
\begin_inset Formula $\pv{\int_{a}^{b}f(x)\dd{x}}$
\end_inset

。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Theorem
如果一个瑕积分的值存在，则一定等于其 Cauchy 主值。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

