\begin_layout Subsection
线性空间
\end_layout

\begin_layout Definition
\begin_inset ERT
status open

\begin_layout Plain Layout

[线性空间]
\end_layout

\end_inset

若 
\begin_inset Formula $V(+)$
\end_inset

 与 
\begin_inset Formula $\mathbb{F}$
\end_inset

 分别为“（加法）交换群”与“数域”，并定义一种被称为“向量数乘 (vector multiplied by a scalar)”的运算
\begin_inset Formula 
\[
m\colon\mathbb{F}\times V\to V\qquad\left(\forall(\alpha,\vec{u})\in\mathbb{F}\times V\right)\left((\alpha,\vec{u})\mapsto m(\alpha,\vec{u})\equiv\alpha*\vec{u}\in V\right)
\]

\end_inset

若 
\begin_inset Formula $V(+,\mathbb{F},*)$
\end_inset

 满足
\end_layout

\begin_deeper
\begin_layout Description
单位元数乘 
\begin_inset Formula $\left(\forall\vec{u}\in V\right)\left(1*\vec{u}=\vec{u}\right)$
\end_inset

 其中 
\begin_inset Formula $1$
\end_inset

 是 
\begin_inset Formula $\mathbb{F}$
\end_inset

 的单位元（即乘法幺半群 
\begin_inset Formula $(\mathbb{F},\times)$
\end_inset

 的基准元）
\end_layout

\begin_layout Description
数量结合律 
\begin_inset Formula $\left(\forall(\alpha,\beta,\vec{u})\in\mathbb{F}^{2}\times V\right)\left(\alpha*(\beta*\vec{u})=(\alpha\times\beta)*\vec{u}\right)$
\end_inset


\end_layout

\begin_layout Description
数量分配律 
\begin_inset Formula $\left(\forall(\alpha,\beta,\vec{u})\in\mathbb{F}^{2}\times V\right)\left((\alpha+\beta)*\vec{u}=\alpha*\vec{u}+\beta*\vec{u}\right)$
\end_inset


\end_layout

\begin_layout Description
向量分配律 
\begin_inset Formula $\left(\forall(\alpha,\vec{u},\vec{v})\in\mathbb{F}\times V^{2}\right)\left(\alpha*(\vec{u}+\vec{v})=\alpha*\vec{u}+\alpha*\vec{v}\right)$
\end_inset


\end_layout

\end_deeper
\begin_layout Definition
则称 
\begin_inset Formula $V(+,\mathbb{F},*)$
\end_inset

 是一个“向量空间 (vector space)”或“线性空间 (linear space)”。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

