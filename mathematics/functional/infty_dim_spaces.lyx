status open

\begin_layout Plain Layout

[环]
\end_layout

\end_inset

给定集合 
\begin_inset Formula $R$
\end_inset

 及定义在其上的“加法”（用 
\begin_inset Formula $+$
\end_inset

 表示）与“乘法”（用 
\begin_inset Formula $\times$
\end_inset

 表示）。若 
\begin_inset Formula $R(+)$
\end_inset

 与 
\begin_inset Formula $R(\times)$
\end_inset

 分别是“[加法]交换群”与“[乘法]半群”，且 
\begin_inset Formula $R(+,\times)$
\end_inset

 满足
\end_layout

\begin_deeper
\begin_layout Description
左分配律 
\begin_inset Formula $\left(\forall(a,b,c)\in R^{3}\right)\left(a\times(b+c)=a\times b+a\times c\right)$
\end_inset


\end_layout

\begin_layout Description
右分配律 
\begin_inset Formula $\left(\forall(a,b,c)\in R^{3}\right)\left((a+b)\times c=a\times c+b\times c\right)$
\end_inset


\end_layout

\end_deeper
\begin_layout Definition
则称 
\begin_inset Formula $R(+,\times)$
\end_inset

 是一个“[结合]环 ([associative] ring)”。若环 
\begin_inset Formula $R(+,\times)$
\end_inset

 还满足
\end_layout

\begin_deeper
\begin_layout Description
乘法交换律 
\begin_inset Formula $\left(\forall(a,b)\in R^{2}\right)\left(a\times b=b\times a\right)$
\end_inset


\end_layout

\end_deeper
\begin_layout Definition
则称 
\begin_inset Formula $R(+,\times)$
\end_inset

 是一个“交换环”。若环 
\begin_inset Formula $R(+,\times)$
\end_inset

 还满足
\end_layout

\begin_deeper
\begin_layout Description
存在单位元 
\begin_inset Formula $\left(\forall a\in R\right)\left(\exists i\in V\right)\left(a\times i=a=i\times a\right)$
\end_inset


\end_layout

\end_deeper
\begin_layout Definition
则称 
\begin_inset Formula $R(+,\times)$
\end_inset

 是一个“存在单位元的环”。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Remark*
环的定语（交换、存在单位元的）都是对其乘法而言的。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Definition
\begin_inset ERT
status open

\begin_layout Plain Layout

[域]
\end_layout

\end_inset

若 
\begin_inset Formula $F(+,\times)$
\end_inset

 是一个“存在单位元的交换环”（即 
\begin_inset Formula $F(+)$
\end_inset

 与 
\begin_inset Formula $F(\times)$
\end_inset

 分别为“交换群”与“交换幺半群”），且 
\begin_inset Formula $F$
\end_inset

 中的非零元 （除 
\begin_inset Formula $F(+)$
\end_inset

 的基准元 —— 记作 
\begin_inset Formula $0$
\end_inset

 —— 外的任意元素）均有乘法逆元，则称 
\begin_inset Formula $F(+,\times)$
\end_inset

 是一个“域 (field)”，并用“黑板粗体 (blackboard bold)”字母 
\begin_inset Formula $\mathbb{F}$
\end_inset

 表示。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Definition
\begin_inset ERT
status open

\begin_layout Plain Layout

[线性空间]
\end_layout

\end_inset

若 
\begin_inset Formula $V(+)$
\end_inset

 与 
\begin_inset Formula $\mathbb{F}$
\end_inset

 分别为“[加法]交换群”与“数域”，并定义一种被称为“数[量]乘法 (scalar multiplication)”的运算
\begin_inset Formula 
\[
m\colon\mathbb{F}\times V\to V\qquad\left(\forall(\alpha,\vec{u})\in\mathbb{F}\times V\right)\left((\alpha,\vec{u})\mapsto m(\alpha,\vec{u})\equiv\alpha*\vec{u}\in V\right)
\]

\end_inset

若 
\begin_inset Formula $V(+,\mathbb{F},*)$
\end_inset

 满足
\end_layout

\begin_deeper
\begin_layout Description
单位元数乘 
\begin_inset Formula $\left(\forall\vec{u}\in V\right)\left(1*\vec{u}=\vec{u}\right)$
\end_inset

 其中 
\begin_inset Formula $1$
\end_inset

 是 
\begin_inset Formula $\mathbb{F}$
\end_inset

 的单位元（即群 
\begin_inset Formula $(\mathbb{F},\times)$
\end_inset

 的基准元）
\end_layout

\begin_layout Description
数量结合律 
\begin_inset Formula $\left(\forall(\alpha,\beta,\vec{u})\in\mathbb{F}^{2}\times V\right)\left(\alpha*(\beta*\vec{u})=(\alpha\times\beta)*\vec{u}\right)$
\end_inset


\end_layout

\begin_layout Description
数量分配律 
\begin_inset Formula $\left(\forall(\alpha,\beta,\vec{u})\in\mathbb{F}^{2}\times V\right)\left((\alpha+\beta)*\vec{u}=\alpha*\vec{u}+\beta*\vec{u}\right)$
\end_inset


\end_layout

\begin_layout Description
向量分配律 
\begin_inset Formula $\left(\forall(\alpha,\vec{u},\vec{v})\in\mathbb{F}\times V^{2}\right)\left(\alpha*(\vec{u}+\vec{v})=\alpha*\vec{u}+\alpha*\vec{v}\right)$
\end_inset


\end_layout

\end_deeper
\begin_layout Definition
则称 
\begin_inset Formula $V(+,\mathbb{F},*)$
\end_inset

 是一个“向量空间 (vector space)”或“线性空间 (linear space)”。
\end_layout

