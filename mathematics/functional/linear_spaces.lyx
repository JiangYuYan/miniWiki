status open

\begin_layout Plain Layout

[〔线性|向量〕空间]
\end_layout

\end_inset

给定（加法）交换群 
\begin_inset Formula $(V,+)$
\end_inset

 与数域 
\begin_inset Formula $\mathbb{F}$
\end_inset

，并定义“
\bar under
向量数乘 (vector multiplied by a scalar)
\bar default
 运算”如下
\begin_inset Formula 
\[
m\colon\mathbb{F}\times V\to V\qquad\left(\forall(\alpha,\vec{v})\in\mathbb{F}\times V\right)\left((\alpha,\vec{v})\mapsto m(\alpha,\vec{v})\equiv\alpha*\vec{v}\in V\right)
\]

\end_inset

若 
\begin_inset Formula $(V,+,\mathbb{F},*)$
\end_inset

 满足
\end_layout

\begin_deeper
\begin_layout Description
单位元数乘 
\begin_inset Formula $\left(\forall\vec{v}\in V\right)\left(1*\vec{v}=\vec{v}\right)$
\end_inset

 其中 
\begin_inset Formula $1$
\end_inset

 是 
\begin_inset Formula $\mathbb{F}$
\end_inset

 的单位元（即乘法幺半群 
\begin_inset Formula $(\mathbb{F},\times)$
\end_inset

 的基准元）
\end_layout

\begin_layout Description
数量结合律 
\begin_inset Formula $\left(\forall(\alpha,\beta,\vec{v})\in\mathbb{F}\times\mathbb{F}\times V\right)\left(\alpha*(\beta*\vec{v})=(\alpha\times\beta)*\vec{v}\right)$
\end_inset


\end_layout

\begin_layout Description
数量分配律 
\begin_inset Formula $\left(\forall(\alpha,\beta,\vec{v})\in\mathbb{F}\times\mathbb{F}\times V\right)\left((\alpha+\beta)*\vec{v}=\alpha*\vec{v}+\beta*\vec{v}\right)$
\end_inset


\end_layout

\begin_layout Description
向量分配律 
\begin_inset Formula $\left(\forall(\alpha,\vec{u},\vec{v})\in\mathbb{F}\times V\times V\right)\left(\alpha*(\vec{u}+\vec{v})=\alpha*\vec{u}+\alpha*\vec{v}\right)$
\end_inset


\end_layout

\end_deeper
\begin_layout Definition
则称“
\begin_inset Formula $(V,+,\mathbb{F},*)$
\end_inset

 是一个
\bar under
〔线性|向量〕空间 ([linear|vector] space)
\bar default
”。
\end_layout

