\begin_layout Lemma
\begin_inset ERT
status open

\begin_layout Plain Layout

[Hölder]
\end_layout

\end_inset

若 
\begin_inset Formula $p$
\end_inset

 与 
\begin_inset Formula $q$
\end_inset

 是取自 
\begin_inset Formula $(1,+\infty)$
\end_inset

 的共轭指数，且有 
\begin_inset Formula $\sum_{n=1}^{\infty}\vert x_{n}\vert^{p}\le+\infty$
\end_inset

 及 
\begin_inset Formula $\sum_{n=1}^{\infty}\vert y_{n}\vert^{q}\le+\infty$
\end_inset

，则
\begin_inset Formula 
\[
\boxed{\sum_{n=1}^{\infty}\vert x_{n}\cdot y_{n}\vert\le\left(\sum_{n=1}^{\infty}\vert x_{n}\vert^{p}\right)^{1/p}\cdot\left(\sum_{n=1}^{\infty}\vert y_{n}\vert^{q}\right)^{1/q}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
若 
\begin_inset Formula $\sum_{n=1}^{\infty}\vert x_{n}\vert^{p}=0$
\end_inset

 或 
\begin_inset Formula $\sum_{n=1}^{\infty}\vert y_{n}\vert^{q}=0$
\end_inset

，则结论显然成立；下面只考虑 
\begin_inset Formula $\sum_{n=1}^{\infty}\vert x_{n}\vert^{p}\ne0$
\end_inset

 且 
\begin_inset Formula $\sum_{n=1}^{\infty}\vert y_{n}\vert^{q}\ne0$
\end_inset

 的情形。利用 Young's 不等式：
\begin_inset Formula 
\[
\frac{\vert x_{k}\vert}{\left(\sum_{n=1}^{\infty}\vert x_{n}\vert^{p}\right)^{1/p}}\cdot\frac{\vert y_{k}\vert}{\left(\sum_{n=1}^{\infty}\vert y_{n}\vert^{q}\right)^{1/q}}\le\frac{1}{p}\frac{\vert x_{k}\vert^{p}}{\sum_{n=1}^{\infty}\vert x_{n}\vert^{p}}+\frac{1}{q}\frac{\vert y_{k}\vert^{q}}{\sum_{n=1}^{\infty}\vert y_{n}\vert^{q}}
\]

\end_inset

对 
\begin_inset Formula $k$
\end_inset

 求和即得
\begin_inset Formula 
\[
\frac{\sum_{k=1}^{\infty}\vert x_{k}\vert\cdot\vert y_{k}\vert}{\left(\sum_{n=1}^{\infty}\vert x_{n}\vert^{p}\right)^{1/p}\cdot\left(\sum_{n=1}^{\infty}\vert y_{n}\vert^{q}\right)^{1/q}}\le\frac{1}{p}\cancelto{1}{\frac{\sum_{k=1}^{\infty}\vert x_{k}\vert^{p}}{\sum_{n=1}^{\infty}\vert x_{n}\vert^{p}}}+\frac{1}{q}\cancelto{1}{\frac{\sum_{k=1}^{\infty}\vert y_{k}\vert^{q}}{\sum_{n=1}^{\infty}\vert y_{n}\vert^{q}}}=1
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout

[Minkowski]
\end_layout

\end_inset

若 
\begin_inset Formula $p\in(1,+\infty)$
\end_inset

，且有 
\begin_inset Formula $\sum_{n=1}^{\infty}\vert x_{n}\vert^{p}\le+\infty$
\end_inset

 及 
\begin_inset Formula $\sum_{n=1}^{\infty}\vert y_{n}\vert^{p}\le+\infty$
\end_inset

，则
\begin_inset Formula 
\[
\boxed{\left(\sum_{n=1}^{\infty}\vert x_{n}+y_{n}\vert^{p}\right)^{1/p}\le\left(\sum_{n=1}^{\infty}\vert x_{n}\vert^{p}\right)^{1/p}+\left(\sum_{n=1}^{\infty}\vert y_{n}\vert^{p}\right)^{1/p}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
若 
\begin_inset Formula $\sum_{n=1}^{\infty}\vert x_{n}+y_{n}\vert^{p}=0$
\end_inset

，则结论显然成立；下面只考虑 
\begin_inset Formula $\sum_{n=1}^{\infty}\vert x_{n}+y_{n}\vert^{p}\ne0$
\end_inset

 的情形。由 
\begin_inset Formula $\vert x_{n}+y_{n}\vert\le\vert x_{n}\vert+\vert y_{n}\vert$
\end_inset

 得
\begin_inset Formula 
\[
\begin{aligned}\sum_{n=1}^{\infty}\vert x_{n}+y_{n}\vert^{p} & =\sum_{n=1}^{\infty}\vert x_{n}+y_{n}\vert\cdot\vert x_{n}+y_{n}\vert^{p-1}\\
 & \le\sum_{n=1}^{\infty}\vert x_{n}\vert\cdot\vert x_{n}+y_{n}\vert^{p-1}+\sum_{n=1}^{\infty}\vert y_{n}\vert\cdot\vert x_{n}+y_{n}\vert^{p-1}
\end{aligned}
\]

\end_inset

令 
\begin_inset Formula $q\coloneqq p/(p-1)$
\end_inset

，则有 
\begin_inset Formula $1/p+1/q=1$
\end_inset

，故可对右端两项分别应用 Hölder's 不等式：
\begin_inset Formula 
\[
\begin{aligned}\sum_{n=1}^{\infty}\vert x_{n}\vert\cdot\vert x_{n}+y_{n}\vert^{p-1} & \le\left(\sum_{k=1}^{\infty}\vert x_{k}\vert^{p}\right)^{1/p}\cdot\left(\sum_{k=1}^{\infty}\left(\vert x_{n}+y_{n}\vert^{p-1}\right)^{q}\right)^{1/q}\\
\sum_{n=1}^{\infty}\vert y_{n}\vert\cdot\vert x_{n}+y_{n}\vert^{p-1} & \le\left(\sum_{k=1}^{\infty}\vert y_{k}\vert^{p}\right)^{1/p}\cdot\left(\sum_{k=1}^{\infty}\left(\vert x_{n}+y_{n}\vert^{p-1}\right)^{q}\right)^{1/q}
\end{aligned}
\]

\end_inset

从而有
\begin_inset Formula 
\[
\sum_{n=1}^{\infty}\vert x_{n}+y_{n}\vert^{p}\le\left(\left(\sum_{k=1}^{\infty}\vert x_{k}\vert^{p}\right)^{1/p}+\left(\sum_{k=1}^{\infty}\vert y_{k}\vert^{p}\right)^{1/p}\right)\left(\sum_{k=1}^{\infty}\vert x_{n}+y_{n}\vert^{(p-1)q}\right)^{1/q}
\]

\end_inset

两边同除以
\begin_inset Formula 
\[
\left(\sum_{k=1}^{\infty}\vert x_{n}+y_{n}\vert^{p}\right)^{1-1/p}=\left(\sum_{k=1}^{\infty}\vert x_{n}+y_{n}\vert^{(p-1)q}\right)^{1/q}\impliedby q=\frac{p}{p-1}
\]

\end_inset

即得所需结果。
\end_layout

