\end_inset


\begin_inset Formula 
\begin{equation}
\dv{t}\int_{V}\ket{U}\dd{V}+\oint_{\partial V}\vu{n}\cdot\left(\VecKet{F}-\vec{u}^{c}\ket{U}\right)\dd{S}=\ket{0}\label{eq:ConservationLawSystemOnMovingControlVolume}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
\int_{V}\pdv{\ket{U}}{t}\dd{V}+\oint_{\partial V}\vu{n}\cdot\VecKet{F}\dd{S}=\ket{0}
