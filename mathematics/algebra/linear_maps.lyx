\begin_layout Definition
\begin_inset ERT
status open

\begin_layout Plain Layout

[可对角化]
\end_layout

\end_inset

若存在域 
\begin_inset Formula $\mathbb{F}$
\end_inset

 上的 
\begin_inset Formula $n$
\end_inset

 维线性空间 
\begin_inset Formula $\mathcal{V}$
\end_inset

 的一组基，使得线性算子 
\begin_inset Formula $\Operator{A}\in\mathcal{L}(\mathcal{V})$
\end_inset

 在此基下的矩阵 
\begin_inset Formula $\Matrix{A}\in\mathbb{F}^{n\times n}$
\end_inset

 为对角阵，则称 
\begin_inset Formula $\Operator{A}$
\end_inset

 为“可对角化算子 (diagonalizable operator)”，并称此 
\begin_inset Formula $\Operator{A}$
\end_inset

 在任意一组基下的矩阵为“可对角化矩阵 (diagonalizable matrix)”。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout

[可对角化条件]
\end_layout

\end_inset

若 
\begin_inset Formula $\Operator{A}$
\end_inset

 为域 
\begin_inset Formula $\mathbb{F}$
\end_inset

 上的 
\begin_inset Formula $n$
\end_inset

 维线性空间 
\begin_inset Formula $\mathcal{V}$
\end_inset

 上的线性算子，则以下条件等价：
\end_layout

\begin_deeper
\begin_layout Enumerate
存在 
\begin_inset Formula $\mathcal{V}$
\end_inset

 的一组基 
\begin_inset Formula $\begin{Bmatrix}\vec{e}_{1} & \dots & \vec{e}_{n}\end{Bmatrix}$
\end_inset

，使得 
\begin_inset Formula $\Operator{A}$
\end_inset

 在此基下的矩阵 
\begin_inset Formula $\Matrix{A}$
\end_inset

 为对角阵：
\begin_inset Formula 
\begin{equation}
\Operator{A}\begin{bmatrix}\vec{e}_{1} & \dots & \vec{e}_{n}\end{bmatrix}=\begin{bmatrix}\vec{e}_{1} & \dots & \vec{e}_{n}\end{bmatrix}\Matrix{A}\qquad\Matrix{A}\coloneqq\begin{bmatrix}a_{1}\\
 & \ddots\\
 &  & a_{n}
\end{bmatrix}\label{eq:线性算子：对角阵：一般}
\end{equation}

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $\Operator{A}$
\end_inset

 有 
\begin_inset Formula $n$
\end_inset

 个独立的特征向量。
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\mathcal{V}$
\end_inset

 有一组由 
\begin_inset Formula $\Operator{A}$
\end_inset

 的特征向量构成的基。
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\mathcal{V}=\bigoplus_{i=1}^{s}\mathcal{V}_{\lambda_{i}}$
\end_inset

，其中 
\begin_inset Formula $\begin{Bmatrix}\lambda_{1} & \dots & \lambda_{s}\end{Bmatrix}$
\end_inset

 为 
\begin_inset Formula $\Operator{A}$
\end_inset

 的互异特征值（共 
\begin_inset Formula $s$
\end_inset

 个）。
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\dim\mathcal{V}=\sum_{i=1}^{s}\dim\mathcal{V}_{\lambda_{i}}$
\end_inset

，其中 
\begin_inset Formula $\begin{Bmatrix}\lambda_{1} & \dots & \lambda_{s}\end{Bmatrix}$
\end_inset

 为 
\begin_inset Formula $\Operator{A}$
\end_inset

 的互异特征值（共 
\begin_inset Formula $s$
\end_inset

 个）。
\end_layout

\begin_layout Enumerate
特征值 
\begin_inset Formula $\lambda_{i}$
\end_inset

 的代数重数 
\begin_inset Formula $r_{i}$
\end_inset

 与几何重数 
\begin_inset Formula $\dim\mathcal{V}_{\lambda_{i}}$
\end_inset

 相等，其中 
\begin_inset Formula $i=1,\dots,s$
\end_inset

。
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Corollary
适当调整基 
\begin_inset Formula $\begin{Bmatrix}\vec{e}_{1} & \dots & \vec{e}_{n}\end{Bmatrix}$
\end_inset

 中向量顺序，可将 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:线性算子：对角阵：一般"

\end_inset

 式中的矩阵 
\begin_inset Formula $\Matrix{A}$
\end_inset

 化为
\begin_inset Formula 
\[
\Operator{A}\begin{bmatrix}\vec{e}_{1} & \dots & \vec{e}_{n}\end{bmatrix}=\begin{bmatrix}\vec{e}_{1} & \dots & \vec{e}_{n}\end{bmatrix}\Matrix{A}\qquad\Matrix{A}\coloneqq\begin{bmatrix}\Matrix{\Lambda_{1}}\\
 & \ddots\\
 &  & \Matrix{\Lambda_{s}}
\end{bmatrix}
\]

\end_inset

其中 
\begin_inset Formula $\Matrix{\Lambda_{i}}$
\end_inset

 为以 
\begin_inset Formula $\lambda_{i}$
\end_inset

 为对角元的 
\begin_inset Formula $r_{i}\equiv\dim\mathcal{V}_{\lambda_{i}}$
\end_inset

 级对角阵（共 
\begin_inset Formula $s$
\end_inset

 个）。
\end_layout

