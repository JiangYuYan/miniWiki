\begin_inset Formula 
\[
\prod_{k=1}^{n-1}\sin\frac{k\pi}{n}=\sin\frac{\pi}{n}\sin\frac{2\pi}{n}\cdots\sin\frac{(n-1)\pi}{n}=\frac{n}{2^{n-1}},\quad\forall\,n\in\mathbb{N}\land n>1
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
利用
\begin_inset Formula 
\[
\sin\frac{k\pi}{n}=\frac{\exp(\ii\frac{k\pi}{n})-\exp(-\ii\frac{k\pi}{n})}{2\ii}=\exp(-\ii\frac{k\pi}{n})\frac{\exp(\ii\frac{2k\pi}{n})-1}{2\ii}
\]

\end_inset

记 
\begin_inset Formula $w=\exp(\sqrt{-1}\frac{2\pi}{n})$
\end_inset

，则 
\begin_inset Formula $\left\{ w^{k}\right\} _{k=1}^{n}$
\end_inset

 是 
\begin_inset Formula $z^{n}=1$
\end_inset

 的 
\begin_inset Formula $n$
\end_inset

 个互异复数根。于是，所求乘积可以分解为两个乘积的乘积
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\prod_{k=1}^{n-1}\sin\frac{k\pi}{n}=\left[\prod_{k=1}^{n-1}\frac{\exp(-\ii\frac{k\pi}{n})}{2\ii}\right]\cdot\left[\prod_{k=1}^{n-1}\left(w^{k}-1\right)\right]
\]

\end_inset

第一个乘积可通过对指数上的等差数列求和获得
\begin_inset Formula 
\[
\prod_{k=1}^{n-1}\frac{\exp(-\ii\frac{k\pi}{n})}{2\ii}=\frac{\exp(-\ii\frac{\pi}{n}\sum_{k=1}^{n-1}k)}{\left(2\ii\right)^{n-1}}=\frac{\exp(-\ii\frac{(n-1)\pi}{2})}{\left(2\ii\right)^{n-1}}=\frac{(-\ii)^{n-1}}{\left(2\ii\right)^{n-1}}=\frac{(-1)^{n-1}}{2^{n-1}}
\]

\end_inset

第二个乘积可以利用因式分解
\begin_inset Formula 
\[
z^{n}-1=\prod_{k=1}^{n}\left(z-w^{k}\right)=(-1)^{n-1}(z-1)\prod_{k=1}^{n-1}\left(w^{k}-z\right)
\]

\end_inset

和极限值
\begin_inset Formula 
\[
\eval{\frac{z^{n}-1}{z-1}}_{z=1}=\eval{nz^{n-1}}_{z=1}=n
\]

\end_inset

求得
\begin_inset Formula 
\[
\prod_{k=1}^{n-1}\left(w^{k}-1\right)=\eval{\frac{1}{(-1)^{n-1}}\cdot\frac{z^{n}-1}{z-1}}_{z=1}=\frac{n}{(-1)^{n-1}}
\]

\end_inset


\end_layout

