\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\sqrt[n]{z}=\sqrt[n]{\rho}\exp(\ii\frac{\theta+2k\pi}{n}),\quad k=0,1,\dots,n-1
\]

\end_inset

