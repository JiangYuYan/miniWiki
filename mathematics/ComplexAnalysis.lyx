\begin_inset Formula 
\[
\exp(\mathrm{i}\theta)=\cos\theta+\mathrm{i}\sin\theta\qquad\forall\theta\in\mathbb{R}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
利用 
\begin_inset Formula $\exp\theta$
\end_inset

、
\begin_inset Formula $\cos\theta$
\end_inset

、
\begin_inset Formula $\sin\theta$
\end_inset

 的 Taylor 展开及 
\begin_inset Formula $\mathrm{i}^{2}=-1$
\end_inset

 即得
\begin_inset Formula 
\[
\begin{aligned}\exp(\mathrm{i}\theta) & =\sum_{n=0}^{\infty}\frac{(\mathrm{i}\theta)^{n}}{n!}=\sum_{k=0}^{\infty}\frac{(\mathrm{i}\theta)^{2k}}{(2k)!}+\sum_{k=0}^{\infty}\frac{(\mathrm{i}\theta)^{2k+1}}{(2k+1)!}\\
 & =\sum_{k=0}^{\infty}\frac{(-1)^{k}\theta{}^{2k}}{(2k)!}+\mathrm{i}\sum_{k=0}^{\infty}\frac{(-1)^{k}\theta{}^{2k+1}}{(2k+1)!}\\
 & =\cos\theta+\mathrm{i}\sin\theta
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Standard
利用这个关系，可以化简一些求和、求积式。
\end_layout

\begin_layout Example
化简
\begin_inset Formula 
\[
C_{n}(x):=\sum_{k=1}^{n}\cos kx\qquad S_{n}(x):=\sum_{k=1}^{n}\sin kx
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Solution*
化为等比数列求和
\begin_inset Formula 
\[
\begin{aligned}C_{n}(x)+\sqrt{-1}S_{n}(x) & =\sum_{k=1}^{n}\left(\cos kx+\sqrt{-1}\sin kx\right)=\sum_{k=1}^{n}\exp(\sqrt{-1}kx)\\
 & =\frac{\exp(\sqrt{-1}x)-\exp(\sqrt{-1}(n+1)x)}{1-\exp(\sqrt{-1}x)}\\
 & =\frac{\cos x-1-\cos(nx+x)+\cos nx}{2-2\cos x}\\
 & +\sqrt{-1}\frac{\sin x-\sin(nx+x)+\sin nx}{2-2\cos x}
\end{aligned}
\]

\end_inset

分别取实部、虚部，再利用三角函数的倍角公式、和差化积公式即得
\begin_inset Formula 
\[
\begin{aligned}C_{n}(x) & =\frac{\cos x-1-\cos(nx+x)+\cos nx}{2-2\cos x}\\
 & =\frac{-2\sin^{2}\frac{x}{2}+2\sin(nx+\frac{x}{2})\sin\frac{x}{2}}{4\sin^{2}\frac{x}{2}}\\
 & =\frac{\sin(nx+\frac{x}{2})-\sin\frac{x}{2}}{2\sin\frac{x}{2}}\\
S_{n}(x) & =\frac{\sin x-\sin(nx+x)+\sin nx}{2-2\cos x}\\
 & =\frac{2\sin\frac{x}{2}\cos\frac{x}{2}-2\cos(nx+\frac{x}{2})\sin\frac{x}{2}}{4\sin^{2}\frac{x}{2}}\\
 & =\frac{\cos\frac{x}{2}-\cos(nx+\frac{x}{2})}{2\sin\frac{x}{2}}
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Example
求证
\begin_inset Formula 
\[
\prod_{k=1}^{n-1}\sin\frac{k\pi}{n}=\sin\frac{\pi}{n}\sin\frac{2\pi}{n}\cdots\sin\frac{(n-1)\pi}{n}=\frac{n}{2^{n-1}}\qquad\forall2\leq n\in\mathbb{N}
\]

\end_inset


\end_layout

\begin_layout Proof
利用
\begin_inset Formula 
\[
\begin{aligned}\sin\frac{k\pi}{n} & =\frac{\exp(\sqrt{-1}\frac{k\pi}{n})-\exp(-\sqrt{-1}\frac{k\pi}{n})}{2\sqrt{-1}}\\
 & =\exp(-\sqrt{-1}\frac{k\pi}{n})\frac{\exp(\sqrt{-1}\frac{2k\pi}{n})-1}{2\sqrt{-1}}
\end{aligned}
\]

\end_inset

记 
\begin_inset Formula $w=\exp(\sqrt{-1}\frac{2\pi}{n})$
\end_inset

，则 
\begin_inset Formula $\left\{ w^{k}\right\} _{k=1}^{n}$
\end_inset

 是 
\begin_inset Formula $z^{n}=1$
\end_inset

 的 
\begin_inset Formula $n$
\end_inset

 个互异复数根。于是，所求乘积可以分解为两个乘积的乘积
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\prod_{k=1}^{n-1}\sin\frac{k\pi}{n}=\left[\prod_{k=1}^{n-1}\frac{\exp(-\sqrt{-1}\frac{k\pi}{n})}{2\sqrt{-1}}\right]\cdot\left[\prod_{k=1}^{n-1}\left(w^{k}-1\right)\right]
\]

\end_inset

第一个乘积可通过对指数上的等差数列求和获得
\begin_inset Formula 
\[
\begin{aligned}\prod_{k=1}^{n-1}\frac{\exp(-\sqrt{-1}\frac{k\pi}{n})}{2\sqrt{-1}} & =\frac{\exp(-\sqrt{-1}\frac{\pi}{n}\sum_{k=1}^{n-1}k)}{\left(2\sqrt{-1}\right)^{n-1}}=\frac{\exp(-\sqrt{-1}\frac{(n-1)\pi}{2})}{\left(2\sqrt{-1}\right)^{n-1}}\\
 & =\frac{(-\sqrt{-1})^{n-1}}{\left(2\sqrt{-1}\right)^{n-1}}=\frac{(-1)^{n-1}}{2^{n-1}}
\end{aligned}
\]

\end_inset

第二个乘积可以利用因式分解
\begin_inset Formula 
\[
z^{n}-1=\prod_{k=1}^{n}\left(z-w^{k}\right)=(-1)^{n-1}(z-1)\prod_{k=1}^{n-1}\left(w^{k}-z\right)
\]

\end_inset

和极限值
\begin_inset Formula 
\[
\eval{\frac{z^{n}-1}{z-1}}_{z=1}=\eval{nz^{n-1}}_{z=1}=n
\]

\end_inset

求得
\begin_inset Formula 
\[
\prod_{k=1}^{n-1}\left(w^{k}-1\right)=\eval{\frac{1}{(-1)^{n-1}}\cdot\frac{z^{n}-1}{z-1}}_{z=1}=\frac{n}{(-1)^{n-1}}
\]

\end_inset


\end_layout

