\begin_layout Example*
验证 Laplace 变换的卷积定理。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
将卷积代入 Laplace 变换的定义：
\begin_inset Formula 
\[
\begin{aligned}\mathscr{L}\left[\int_{0}^{t}u(\tau)v(t-\tau)\dd{\tau}\right](p) & =\int_{0}^{\infty}\ee^{-pt}\left[\int_{0}^{t}u(\tau)v(t-\tau)\dd{\tau}\right]\dd{t}\\
 & =\lim_{h\to\infty}\iint_{\triangle_{\tau,t}(h)}\ee^{-pt}u(\tau)v(t-\tau)\dd{\tau}\dd{t}
\end{aligned}
\]

\end_inset

其中 
\begin_inset Formula $\triangle_{\tau,t}(h):=\left\{ (\tau,t):\tau\in[0,t],t\in[0,h]\right\} $
\end_inset

 是 
\begin_inset Formula $(\tau,t)$
\end_inset

 平面上的三角形积分区域。引入坐标变换
\begin_inset Formula 
\[
\begin{bmatrix}\tau\\
t
\end{bmatrix}=\begin{bmatrix}1 & 0\\
1 & 1
\end{bmatrix}\begin{bmatrix}x\\
y
\end{bmatrix}\implies\det(\pdv{(\tau,t)}{(x,y)})=1\implies\dd{\tau}\dd{t}=\dd{x}\dd{y}
\]

\end_inset

于是 
\begin_inset Formula $\triangle_{\tau,t}(h)$
\end_inset

 变换为 
\begin_inset Formula $\triangle_{x,y}(h):=\left\{ (x,y):x\in[0,h],y\in[0,h],x+y\in[0,h]\right\} $
\end_inset

，取极限就得到 
\begin_inset Formula 
\[
\lim_{h\to\infty}\triangle_{x,y}(h)=\left\{ (x,y):x\in[0,\infty),y\in[0,\infty)\right\} \equiv\mathbb{R}_{x}^{+}\times\mathbb{R}_{y}^{+}
\]

\end_inset

从而有
\begin_inset Formula 
\[
\begin{aligned}\mathscr{L}\left[\int_{0}^{t}u(\tau)v(t-\tau)\dd{\tau}\right](p) & =\lim_{h\to\infty}\iint_{\triangle_{\tau,t}(h)}\ee^{-pt}u(\tau)v(t-\tau)\dd{\tau}\dd{t}\\
 & =\lim_{h\to\infty}\iint_{\triangle_{x,y}(h)}\ee^{-px}\ee^{-py}u(x)v(y)\dd{x}\dd{y}\\
 & =\underbrace{\left[\int_{\mathbb{R}_{y}^{+}}\ee^{-px}u(x)\dd{x}\right]}_{\widetilde{u}(p)}\cdot\underbrace{\left[\int_{\mathbb{R}_{y}^{+}}\ee^{-py}v(y)\dd{y}\right]}_{\widetilde{v}(p)}
\end{aligned}
\]

\end_inset


\end_layout

