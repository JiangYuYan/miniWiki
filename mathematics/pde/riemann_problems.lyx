name "sec:微分方程：守恒律：跳跃条件"

\end_inset


\end_layout

\begin_layout Standard
设间断面 
\begin_inset Formula $\Gamma$
\end_inset

 上任意一点的运动速度为
\begin_inset Formula 
\[
\vec{u}^{\Gamma}=\vec{e}_{\nu}u_{\nu}^{\Gamma}+\vec{e}_{\tau}u_{\tau}^{\Gamma}
\]

\end_inset

其中 
\begin_inset Formula $\vec{e}_{\nu}$
\end_inset

 与 
\begin_inset Formula $\vec{e}_{\tau}$
\end_inset

 分别为该点处的“单位法向量”与“单位切向量”。取如下跟随 
\begin_inset Formula $\Gamma$
\end_inset

 移动的控制体 
\begin_inset Formula $\Omega$
\end_inset

：
\end_layout

\begin_layout Itemize
厚度 
\begin_inset Formula $h$
\end_inset

 为无穷小量，即
\begin_inset Formula 
\[
\lim_{h\to0}\vec{u}^{\text{C}}=\vec{u}^{\Gamma}\qquad\lim_{h\to0}\int_{\Omega}\ket{U}\dd{\Omega}=\ket{0}
\]

\end_inset


\end_layout

\begin_layout Itemize
控制体壁面与 
\begin_inset Formula $\Gamma$
\end_inset

 垂直。
\end_layout

\begin_layout Itemize
\begin_inset Formula $\Gamma$
\end_inset

 夹在顶面 
\begin_inset Formula $\Gamma_{+}$
\end_inset

（其上有 
\begin_inset Formula $\vec{\nu}=\vec{e}_{\nu}$
\end_inset

）与底面 
\begin_inset Formula $\Gamma_{-}$
\end_inset

（其上有 
\begin_inset Formula $\vec{\nu}=-\vec{e}_{\nu}$
\end_inset

）之间，三者相互平行。
\end_layout

\begin_layout Standard
于是移动控制体 
\begin_inset Formula $\Omega$
\end_inset

 上的守恒律 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:微分方程：守恒律：方程组：动体"
plural "false"
caps "false"
noprefix "false"

\end_inset

 退化为
\begin_inset Formula 
\[
\int_{\Gamma_{+}\cup\Gamma_{-}}\vec{\nu}\vdot\left(\vec{\ket{F}}-\vec{u}^{\Gamma}\ket{U}\right)\dd{\Gamma}=0
\]

\end_inset

用 
\begin_inset Formula $\vec{\nu}$
\end_inset

 替换 
\begin_inset Formula $\pm\vec{e}_{\nu}$
\end_inset

，并将积分区域收缩为一点，则以上积分式退化为
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
begin{subequations}
\end_layout

\end_inset


\begin_inset CommandInset label
LatexCommand label
name "eq:微分方程：守恒律：跳跃条件"

\end_inset


\begin_inset Formula 
\begin{equation}
\left(\ket{U}_{+}-\ket{U}_{-}\right)u_{\nu}^{\Gamma}=\ket{F_{\nu}}_{+}-\ket{F_{\nu}}_{-}\qquad u_{\nu}^{\Gamma}\coloneqq\vec{e}_{\nu}\cdot\vec{u}^{\Gamma}\qquad\ket{F_{\nu}}\coloneqq\vec{e}_{\nu}\cdot\vec{\ket{F}}\label{eq:微分方程：守恒律：跳跃条件：三维：方程组}
\end{equation}

\end_inset

