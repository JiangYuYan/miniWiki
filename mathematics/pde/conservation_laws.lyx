\begin_inset Formula 
\begin{equation}
\left(\ket{U}_{+}-\ket{U}_{-}\right)s_{\nu}=\ket{F}_{\nu+}-\ket{F}_{\nu-}\qquad s_{\nu}\coloneqq\vec{e}_{\nu}\vdot\vec{s}\qquad\ket{F}_{\nu\pm}\coloneqq\vec{e}_{\nu}\vdot\vec{\ket{F}}_{\pm}\label{eq:微分方程：守恒律：跳跃条件：三维：方程组}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
