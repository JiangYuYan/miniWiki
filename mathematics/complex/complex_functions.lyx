\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout

[Euler]
\end_layout

\end_inset


\begin_inset Formula 
\[
\ee^{\ii z}=\cos z+\ii\sin z\qquad\cos z=\frac{\ee^{\ii z}+\ee^{-\ii z}}{2}\qquad\sin z=\frac{\ee^{\ii z}-\ee^{-\ii z}}{2\ii}\qquad\forall z\in\mathbb{C}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
利用 
\begin_inset Formula $\exp z$
\end_inset

、
\begin_inset Formula $\cos z$
\end_inset

、
\begin_inset Formula $\sin z$
\end_inset

 的 定义及 
\begin_inset Formula $\ii^{2}=-1$
\end_inset

 即得
\begin_inset Formula 
\[
\begin{aligned}\ee^{\ii z} & =\sum_{n=0}^{\infty}\frac{(\ii z)^{n}}{n!}=\sum_{k=0}^{\infty}\frac{(\ii z)^{2k}}{(2k)!}+\sum_{k=0}^{\infty}\frac{(\ii z)^{2k+1}}{(2k+1)!}\\
 & =\sum_{k=0}^{\infty}\frac{(-1)^{k}z{}^{2k}}{(2k)!}+\sqrt{-1}\sum_{k=0}^{\infty}\frac{(-1)^{k}z{}^{2k+1}}{(2k+1)!}=\cos z+\ii\sin z
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Standard
利用这个关系，可以化简一些求和、求积式。
\end_layout

\begin_layout Example
化简
\begin_inset Formula 
\[
C_{n}(x)\coloneqq\sum_{k=1}^{n}\cos kx\qquad S_{n}(x)\coloneqq\sum_{k=1}^{n}\sin kx
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Solution*
化为等比数列求和
\begin_inset Formula 
\[
\begin{aligned}C_{n}(x)+\ii S_{n}(x) & =\sum_{k=1}^{n}\left(\cos kx+\ii\sin kx\right)=\sum_{k=1}^{n}\ee^{\ii kx}=\frac{\ee^{\ii x}-\ee^{\ii(n+1)x}}{1-\ee^{\ii x}}\\
 & =\frac{\cos x-1-\cos(nx+x)+\cos nx}{2-2\cos x}+\ii\frac{\sin x-\sin(nx+x)+\sin nx}{2-2\cos x}
\end{aligned}
\]

\end_inset

分别取实部、虚部，再利用三角函数的倍角公式、和差化积公式即得
\begin_inset Formula 
\[
\begin{aligned}C_{n}(x) & =\frac{\cos x-1-\cos(nx+x)+\cos nx}{2-2\cos x} & S_{n}(x) & =\frac{\sin x-\sin(nx+x)+\sin nx}{2-2\cos x}\\
 & =\frac{-2\sin^{2}\frac{x}{2}+2\sin(nx+\frac{x}{2})\sin\frac{x}{2}}{4\sin^{2}\frac{x}{2}} &  & =\frac{2\sin\frac{x}{2}\cos\frac{x}{2}-2\cos(nx+\frac{x}{2})\sin\frac{x}{2}}{4\sin^{2}\frac{x}{2}}\\
 & =\frac{\sin(nx+\frac{x}{2})-\sin\frac{x}{2}}{2\sin\frac{x}{2}} &  & =\frac{\cos\frac{x}{2}-\cos(nx+\frac{x}{2})}{2\sin\frac{x}{2}}
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Example
求证
\begin_inset Formula 
\[
\prod_{k=1}^{n-1}\sin\frac{k\mathrm{\pi}}{n}=\sin\frac{\mathrm{\pi}}{n}\sin\frac{2\mathrm{\pi}}{n}\cdots\sin\frac{(n-1)\mathrm{\pi}}{n}=\frac{n}{2^{n-1}}\qquad\forall n\in\mathbb{N}\land n>1
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
利用
\begin_inset Formula 
\[
\sin\frac{k\mathrm{\pi}}{n}=\frac{\exp(\ii\frac{k\mathrm{\pi}}{n})-\exp(-\ii\frac{k\mathrm{\pi}}{n})}{2\ii}=\exp(-\ii\frac{k\mathrm{\pi}}{n})\frac{\exp(\ii\frac{2k\mathrm{\pi}}{n})-1}{2\ii}
\]

\end_inset

记 
\begin_inset Formula $w=\exp(\sqrt{-1}\frac{2\mathrm{\pi}}{n})$
\end_inset

，则 
\begin_inset Formula $\left\{ w^{k}\right\} _{k=1}^{n}$
\end_inset

 是 
\begin_inset Formula $z^{n}=1$
\end_inset

 的 
\begin_inset Formula $n$
\end_inset

 个互异复数根。于是，所求乘积可以分解为两个乘积的乘积
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\prod_{k=1}^{n-1}\sin\frac{k\mathrm{\pi}}{n}=\left[\prod_{k=1}^{n-1}\frac{\exp(-\ii\frac{k\mathrm{\pi}}{n})}{2\ii}\right]\cdot\left[\prod_{k=1}^{n-1}\left(w^{k}-1\right)\right]
\]

\end_inset

第一个乘积可通过对指数上的等差数列求和获得
\begin_inset Formula 
\[
\prod_{k=1}^{n-1}\frac{\exp(-\ii\frac{k\mathrm{\pi}}{n})}{2\ii}=\frac{\exp(-\ii\frac{\mathrm{\pi}}{n}\sum_{k=1}^{n-1}k)}{\left(2\ii\right)^{n-1}}=\frac{\exp(-\ii\frac{(n-1)\mathrm{\pi}}{2})}{\left(2\ii\right)^{n-1}}=\frac{(-\ii)^{n-1}}{\left(2\ii\right)^{n-1}}=\frac{(-1)^{n-1}}{2^{n-1}}
\]

\end_inset

第二个乘积可以利用因式分解
\begin_inset Formula 
\[
z^{n}-1=\prod_{k=1}^{n}\left(z-w^{k}\right)=(-1)^{n-1}(z-1)\prod_{k=1}^{n-1}\left(w^{k}-z\right)
\]

\end_inset

和极限值
\begin_inset Formula 
\[
\eval{\frac{z^{n}-1}{z-1}}_{z=1}=\eval{nz^{n-1}}_{z=1}=n
\]

\end_inset

求得
\begin_inset Formula 
\[
\prod_{k=1}^{n-1}\left(w^{k}-1\right)=\eval{\frac{1}{(-1)^{n-1}}\cdot\frac{z^{n}-1}{z-1}}_{z=1}=\frac{n}{(-1)^{n-1}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

